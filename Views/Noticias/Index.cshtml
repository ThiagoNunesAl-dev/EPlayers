@model Noticias
@{
    ViewData["Title"] = "Noticias";
}
<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Title"]</h1>
</div>

<form class = "cadastro" action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">

    <div class="campo">
        <label for="IdNoticia">IdNoticia</label>
        <input type="text" name="IdNoticia" id="IdNoticia">
    </div>

    <div class="campo">
        <label for="Imagem">Imagem</label>
        <input type="file" name="Imagem" id="Imagem">
    </div>

    <div class="campo">
        <label for="Titulo">Título</label>
        <input type="text" name="Titulo" id="Titulo">
    </div>

    <div class="campo">
        <label for="Texto">Texto</label>
        <input type="text" name="Texto" id="Texto">
    </div>

    <button type="submit">Postar</button>
</form>

<table>
    <thead>
        <th>Id</th>
        <th>Imagem</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Noticias)
        {
            <tr>
                <td>@item.IdNoticia</td>
                <td>
                    <img src="img/Noticias/@item.Imagem" alt="Imagem que ilustra a notícia de título: '@item.Titulo'."/>
                </td>
                <td>@item.Titulo</td>
                <td>@item.Texto</td>
                <td>
                    <a asp-controller = "Noticias" asp-action = "Excluir" asp-route-id = "@item.IdNoticia">
                        <i class = "fa fa-trash"></i>
                    </a>
                </td> 
            </tr>
        }
    </tbody>
</table>

